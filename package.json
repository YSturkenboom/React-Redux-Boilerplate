{
  "name": "dps-frontend",
  "version": "1.0.0",
  "main": "index.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "author": "Story of AMS B.V.",
  "license": "UNLICENSED",
  "sideEffects": false,
  "scripts": {
    "dev": "better-npm-run dev",
    "start": "better-npm-run start",
    "build": "yarn clean:build && better-npm-run build",
    "analyze": "yarn clean:build && better-npm-run analyze",
    "lint": "npm-run-all lint:js lint:style",
    "lint:js": "better-npm-run lint:js",
    "lint:style": "better-npm-run lint:style",
    "flow": "better-npm-run flow",
    "flow:stop": "better-npm-run flow:stop",
    "test": "better-npm-run test",
    "test:watch": "yarn test --watch",
    "clean": "npm-run-all clean:build clean:test",
    "clean:build": "better-npm-run clean:build",
    "clean:test": "better-npm-run clean:test",
    "coveralls": "yarn clean:test && better-npm-run coveralls",
    "precommit": "lint-staged"
  },
  "betterScripts": {
    "dev": {
      "command": "nodemon ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "start": {
      "command": "node ./index.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production",
        "PORT": 8080
      }
    },
    "build": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/webpack.config.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "analyze": {
      "command": "webpack --progress --hide-modules --config ./tools/webpack/webpack.config.js",
      "env": {
        "NODE_ENV": "analyze"
      }
    },
    "lint:js": {
      "command": "eslint --fix ./src ./tools ./index.js"
    },
    "lint:style": {
      "command": "stylelint --fix \"./src/**/*.scss\""
    },
    "flow": {
      "command": "flow"
    },
    "flow:stop": {
      "command": "flow stop"
    },
    "test": {
      "command": "jest --coverage",
      "env": {
        "NODE_ENV": "test"
      }
    },
    "clean:build": {
      "command": "rm -rf ./public/assets"
    },
    "clean:test": {
      "command": "rm -rf ./coverage"
    },
    "coveralls": {
      "command": "cat ./coverage/lcov.info | coveralls"
    }
  },
  "lint-staged": {
    "./src ./tools ./index.js": [
      "eslint"
    ],
    "./src/**/*.scss": [
      "stylelint"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "useBuiltIns": "usage"
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "loadable-components/babel",
      "dynamic-import-node",
      "lodash",
      "@babel/plugin-proposal-class-properties"
    ],
    "env": {
      "production": {
        "plugins": [
          "transform-remove-console"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "plugin:lodash/recommended",
      "airbnb",
      "prettier",
      "prettier/react"
    ],
    "plugins": [
      "react",
      "lodash",
      "prettier",
      "import"
    ],
    "settings": {
      "import/resolver": {
        "webpack": {
          "config": "./tools/webpack/webpack.config.js"
        }
      }
    },
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es6": true
    },
    "rules": {
      "react/destructuring-assignment": "off",
      "react/prop-types": "off",
      "react/forbid-prop-types": "off",
      "react/prefer-stateless-function": "off",
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "import/no-cycle": "off",
      "import/prefer-default-export": "off",
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true,
          "optionalDependencies": false,
          "peerDependencies": false
        }
      ],
      "comma-dangle": [
        "error",
        "never"
      ],
      "global-require": "off",
      "no-console": "off",
      "no-underscore-dangle": "off",
      "no-use-before-define": "off",
      "function-paren-newline": "off",
      "lodash/import-scope": "off",
      "lodash/prefer-noop": "off",
      "lodash/prefer-lodash-typecheck": "off",
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true
        }
      ]
    },
    "globals": {
      "__CLIENT__": true,
      "__SERVER__": true,
      "__DEV__": true
    }
  },
  "eslintIgnore": [],
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-recommended-scss",
      "./node_modules/prettier-stylelint/config.js"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "string-quotes": "single",
      "selector-pseudo-class-no-unknown": [
        true,
        {
          "ignorePseudoClasses": [
            "global",
            "local"
          ]
        }
      ]
    }
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/tools/jest/setup.js",
    "globals": {
      "__DEV__": true
    },
    "collectCoverageFrom": [
      "src/app/**/*.js",
      "src/pages/**/*.js",
      "src/components/**/*.js",
      "src/actions/**/*.js",
      "src/reducers/**/*.js",
      "!src/actions/index.js",
      "!src/components/index.js",
      "!src/pages/index.js",
      "!src/pages/Home/index.js",
      "!src/reducers/index.js",
      "!src/**/__tests__"
    ],
    "moduleNameMapper": {
      ".*\\.(css|scss|sass)$": "<rootDir>/tools/jest/styleMock.js",
      ".*\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tools/jest/assetMock.js"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src/server.js",
      "src/utils/renderHtml.js"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "dependencies": {
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.55",
    "@babel/preset-env": "^7.0.0-beta.55",
    "@babel/preset-react": "^7.0.0-beta.55",
    "@babel/register": "^7.0.0-beta.55",
    "asset-require-hook": "^1.2.0",
    "autoprefixer": "^9.0.1",
    "axios": "^0.18.0",
    "babel-plugin-dynamic-import-node": "^2.0.0",
    "babel-plugin-lodash": "^3.3.4",
    "babel-plugin-transform-remove-console": "^6.9.4",
    "better-npm-run": "^0.1.0",
    "bootstrap": "^3.3.7",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "cross-spawn": "^6.0.5",
    "css-modules-require-hook": "^4.2.3",
    "express": "^4.16.3",
    "helmet": "^3.13.0",
    "history": "^4.7.2",
    "hpp": "^0.2.2",
    "html-minifier": "^3.5.19",
    "loadable-components": "^2.2.2",
    "lodash": "^4.17.10",
    "morgan": "^1.9.0",
    "node-sass": "^4.9.2",
    "normalize.css": "^8.0.0",
    "opn": "^5.3.0",
    "prop-types": "^15.6.2",
    "react": "^16.4.1",
    "react-bootstrap": "^0.32.1",
    "react-dev-utils": "^5.0.1",
    "react-dom": "16.4.2",
    "react-helmet": "^5.2.0",
    "react-hot-loader": "^4.3.4",
    "react-redux": "^5.0.7",
    "react-router-bootstrap": "^0.24.4",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.3.1",
    "react-router-redux": "^5.0.0-alpha.9",
    "react-toastify": "^3.4.2",
    "redux": "^4.0.0",
    "redux-thunk": "^2.3.0",
    "serialize-javascript": "^1.5.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.55",
    "@babel/core": "^7.0.0-beta.55",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.6",
    "babel-jest": "^23.4.2",
    "babel-loader": "^8.0.0-beta.0",
    "babel-plugin-istanbul": "^4.1.6",
    "compression-webpack-plugin": "^1.1.11",
    "coveralls": "^3.0.2",
    "css-loader": "^1.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-loader": "^2.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-lodash": "^2.7.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.9.1",
    "file-loader": "^1.1.11",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "husky": "^0.14.3",
    "identity-obj-proxy": "^3.0.0",
    "imagemin-webpack-plugin": "^2.2.0",
    "jest": "^23.4.2",
    "lint-staged": "^7.2.0",
    "lodash-webpack-plugin": "^0.11.5",
    "mini-css-extract-plugin": "^0.4.1",
    "nock": "^9.4.3",
    "nodemon": "^1.18.3",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^5.0.0",
    "path": "^0.12.7",
    "postcss": "^7.0.1",
    "postcss-loader": "^2.1.6",
    "prettier": "^1.14.0",
    "prettier-stylelint": "^0.4.2",
    "raf": "^3.4.0",
    "react-test-renderer": "^16.4.1",
    "redux-mock-store": "^1.5.3",
    "sass-loader": "^7.0.3",
    "style-loader": "^0.22.0",
    "stylelint": "^9.4.0",
    "stylelint-config-recommended-scss": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.2.0",
    "stylelint-webpack-plugin": "^0.10.5",
    "url-loader": "^1.0.1",
    "webpack": "^4.16.3",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-cli": "^3.1.0",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-hot-middleware": "^2.22.3",
    "webpack-manifest-plugin": "^2.0.3"
  },
  "resolutions": {
    "webpack-sources": "^1.1.0"
  }
}
